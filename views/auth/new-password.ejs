<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <section id="login" class="py-5">
      <div class="container py-4">
        <div class="row">
          <div class="col-md-6 mx-auto">
            <div class="card">
              <div class="card-header bg-primary text-white">
                <h4><i class="fas fa-sign-in-alt"></i> New Password</h4>
              </div>
              <div class="card-body">
                <form action="/auth/new-password" method="POST">
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input
                      type="password"
                      class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'border border-danger' : '' %>"
                      name="password"
                      id="password"
                      value="<%=oldInput.password %>"
                      required
                    />
                    <div class="invalid-feedback <%= validationErrors.find(e => e.param === 'password') ? 'display-invalid-message' : '' %>">
                        <%= validationErrors.findIndex(e => e.param === 'password') > -1 && validationErrors[validationErrors.findIndex(e => e.param === 'password')].msg %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="password">Confirm Password</label>
                    <input
                      type="password"
                      class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'border border-danger' : '' %> "
                      name="confirmPassword"
                      id="password"
                      value="<%=oldInput.confirmPassword %>"
                      required
                    />
                    <div class="invalid-feedback <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'display-invalid-message' : '' %>">
                        <%= validationErrors.findIndex(e => e.param === 'confirmPassword') > -1 && validationErrors[validationErrors.findIndex(e => e.param === 'confirmPassword')].msg %>
                    </div>
                  </div>
                  <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                  <input type="hidden" value="<%= userId %>" name="userId">
                  <input type="hidden" value="<%= passwordToken %>" name="passwordToken">
                  <input
                    type="submit" 
                    value="Update Password"
                    class="btn btn-primary btn-block"
                  />
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <%- include('../includes/footer.ejs') %>
</body>
