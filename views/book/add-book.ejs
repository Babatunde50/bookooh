<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/nav.ejs') %>
    <div class="container py-4">
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>Add Book</h4>
                    </div>
                    <form action="<%if(editing) { %>/edit-book/<%=book._id %><% } else { %>/add-book<%} %>" method="POST" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="">Title</label>
                                <input type="text" class="form-control" name="title" value="<% if(editing) { %><%= book.title %><% }%>" >
                            </div>
                            <div class="form-group">
                                <label for="book-type">Book Type</label>
                                <select class="form-control" id="book-type" name="type">
                                    <option value="pdf" selected="<% if(editing && book.type === 'pdf') { %>selected<% }%>">PDF</option>
                                    <option value="hard-copy" selected="<% if(editing && book.type === 'hard-copy') { %>selected<% }%>">HARD COPY</option>
                                  </select>
                            </div>
                            <div class="form-group">
                                <label for="image">Upload Image</label>
                                <div class="custom-file">
                                     <input type="file" class="custom-file-input" id="image" name="image" value="<% if(editing) { %><%= book.image %><% }%>">
                                     <label for="image" class="custom-file-label">Choose File</label>
                                </div>
                                <small class="form-text text-muted">Max Size 3mb</small>
                            </div>
                            <div class="form-group">
                                <label for="body">Description</label>
                                <textarea name="description" id="body" class="form-control"><% if(editing) { %><%= book.description %><% }%></textarea>
                            </div>
                        </div>
                        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                        <div class="card-footer text-center">
                            <button type="submit" class="btn btn-outline-primary btn-lg btn-block"> Submit </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


<%- include('../includes/footer.ejs') %>
