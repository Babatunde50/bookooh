<%- include('../includes/head.ejs') %>

<body>
  <%- include('../includes/nav.ejs') %>

  <!-- PROFILE -->
  <section id="reset" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card">
            <div class="card-header bg-primary text-white">
              <h4><i class="fas fa-sign-in-alt"></i> Update Password</h4>
            </div>
            <div class="card-body">
              <form action="/profile/update" method="POST">
                <div class="form-group">
                  <label for="email">Current Password</label>
                  <input
                    type="password"
                    class="form-control <%= validationErrors.find(e => e.param === 'oldPassword') ? 'border border-danger' : '' %>"
                    name="oldPassword"
                    id="password"
                    value="<%= oldInput.oldPassword %>"
                  />
                  <div class="invalid-feedback <%= validationErrors.find(e => e.param === 'oldPassword') ? 'display-invalid-message' : '' %>">
                    <%= validationErrors.findIndex(e => e.param === 'oldPassword') > -1 && validationErrors[validationErrors.findIndex(e => e.param === 'oldPassword')].msg %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="new-password">New Password</label>
                  <input
                    type="password"
                    class="form-control <%= validationErrors.find(e => e.param === 'newPassword') ? 'border border-danger' : '' %>"
                    name="newPassword"
                    id="new-password"
                    value="<%= oldInput.newPassword %>"
                  />
                  <div class="invalid-feedback <%= validationErrors.find(e => e.param === 'newPassword') ? 'display-invalid-message' : '' %>">
                    <%= validationErrors.findIndex(e => e.param === 'newPassword') > -1 && validationErrors[validationErrors.findIndex(e => e.param === 'newPassword')].msg %>
                  </div>
                </div>

                <div class="form-group">
                  <label for="confirm-new-password">Confirm New Password</label>
                  <input
                    type="password"
                    class="form-control <%= validationErrors.find(e => e.param === 'confirmNewPassword') ? 'border border-danger' : '' %>"
                    name="confirmNewPassword"
                    id="confirm-new-password"
                    value="<%= oldInput.confirmNewPassword %>"
                  />
                  <div class="invalid-feedback <%= validationErrors.find(e => e.param === 'confirmNewPassword') ? 'display-invalid-message' : '' %>">
                    <%= validationErrors.findIndex(e => e.param === 'confirmNewPassword') > -1 && validationErrors[validationErrors.findIndex(e => e.param === 'confirmNewPassword')].msg %>
                  </div>
                </div>
                <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
                <input
                  type="submit"
                  value="Update Password"
                  class="btn btn-primary btn-block"
                />
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

<%- include('../includes/footer.ejs') %>
